[include]
  path = .custom/gitconfig
[core]
  editor = "vim"
  excludesfile = "~/.gitignore"
[alias]
  st = status
  ci = commit
  co = checkout
  br = branch
  lg = log --graph --decorate --abbrev-commit --pretty=format:'%Cblue%h%Creset - %Cred%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  files = !git --no-pager show --pretty="format:" --name-only
  amend = commit -a --amend --no-edit
[color]
  ui = auto
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[push]
  default = simple
